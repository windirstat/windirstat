root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{rc,rc2}]
charset = utf-8

[*.{cmd,bat,vcxproj,vcxproj.filters,sln}]
end_of_line = crlf

[*.{c,cpp,h}]
charset = utf-8
trim_trailing_whitespace = true

[*.{md}]
charset = utf-8
trim_trailing_whitespace = false

[{Makefile,GNUmakefile}]
indent_style = tab
